<LoginScreen>
    GridLayout:
        cols: 2
        GridLayout:
            cols: 1
            TextInput:
                disabled: True
                id: instrucciones
                text: "Usuario"
            Label:
                text: "Código usuario"
            TextInput:
                hint_text: "Código"
                id: codigo_usuario
            Label:
                text: "Contraseña"
            TextInput:
                hint_text: "Contraseña"
                id: contrasena_usuario
        GridLayout:
            cols: 3
            Button: 
                text: "7"
                on_press: root.add_number(self.text)
            Button:
                text: "8"
                on_press: root.add_number(self.text)
            Button:
                text: "9"
                on_press: root.add_number(self.text)
            Button:
                text: "4"
                on_press: root.add_number(self.text)
            Button:
                text: "5"
                on_press: root.add_number(self.text)
            Button:
                text: "6"
                on_press: root.add_number(self.text)
            Button:
                text: "1"
                on_press: root.add_number(self.text)
            Button:
                text: "2"
                on_press: root.add_number(self.text)
            Button:
                text: "3"
                on_press: root.add_number(self.text)
            Button:
                text: "Delete"
                on_press: root.delete_number("Usuario" if instrucciones.text == "Usuario" or instrucciones.text == "Usuario incorrecto" else "Contraseña")
                background_color: "red"
            Button:
                text: "0"
                on_press: add_number(self.text)
            Button:
                text: "Confirm"
                on_press: root.confirm_user("Usuario" if instrucciones.text == "Usuario" or instrucciones.text == "Usuario incorrecto" else "Contraseña")
                background_color: "green"


<MainLayout>
    Button:
        text: "Main Layout"

<MainApp>